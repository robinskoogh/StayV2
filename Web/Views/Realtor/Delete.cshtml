@using Core.Models
@model RealEstateObject

@{
    ViewData["Title"] = "Ta bort bostadsobjekt";
}

<div class="border border-1 row p-2 my-3 mb-5" style="border:1px solid #446e9b; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
    <h1>@ViewData["Title"]</h1>
    <h3 style="color: darkgrey;">Är du säker på att du vill ta bort det här bostadsobjektet?</h3>
    <hr />
    <div class="col-11 offset-4">
        <h4 style="padding-left: 5%; padding-bottom: 1%;">@Html.DisplayFor(model => model.Address)</h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ZipCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ZipCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PropType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PropType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContractType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContractType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NrOfRooms)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NrOfRooms)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LivingArea)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LivingArea)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GrossArea)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GrossArea)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PlotSize)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PlotSize)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ConstructionYear)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ConstructionYear)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Balcony)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Balcony)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateForViewing)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateForViewing)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateUploaded)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateUploaded)
            </dd>
        </dl>
        <form asp-action="Delete" style="padding-left: 5%; padding-bottom: 2%;">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-primary"><i class="fa-solid fa-arrow-left"></i> Tillbaka</a> |
            <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Ta bort</button>
        </form>
    </div>
</div>