@using Web.ViewModels
@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "Rollhantering";

    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Lägg till / ta bort användare från roll</h2>
        </div>
        <div class="card-body">
            <i>
                <strong>
                    Kryssa i/ur användare för att lägga till/ta bort från roll
                </strong>
            </i>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Spara" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId"
               class="btn btn-primary" style="width:auto">Tillbaka</a>
        </div>
    </div>
</form>